<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SkyBlue">

    <TextView
        android:id="@+id/cash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:text="@string/cash_res"
        android:textColor="@color/White"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cash_edit"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_below="@+id/cash_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text" />

    <Button
        android:id="@+id/cash_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/cash_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/for_first_button"
        android:text="@string/but_third"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="25dp" />
</RelativeLayout>